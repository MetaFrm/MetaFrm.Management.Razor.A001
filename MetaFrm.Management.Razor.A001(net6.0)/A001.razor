@using MetaFrm.Control
@using MetaFrm.Management.Razor.Models
@using MetaFrm.Razor.Command
@using MetaFrm.Razor.DataGrid
@using MetaFrm.Razor.Dictionary
@using MetaFrm.Razor.Field
@using MetaFrm.Razor.Group
@using MetaFrm.Razor.Search
@using MetaFrm.Razor.Title
@using Microsoft.AspNetCore.Components.Forms
@using Microsoft.AspNetCore.Components.Web
@inherits BaseComponent

<TitleControl Title="@this.GetAttribute("Description")"></TitleControl>

<DataGridControl TItem="AssemblyModel" @ref="this.DataGridControl" Columns="this.ColumnDefinitions" DataItems="this.A001ViewModel.SelectResultModel" PagingEnabled="true"
                 TableClass="table-hover"
                 RowAdd="this.New"
                 MovePage="this.Search"
                 RowModify="this.RowModify">
    <SearchInputControl>
        <input type="text" class="form-control rounded-start" placeholder="Search" @bind-value="@this.A001ViewModel.SearchModel.SEARCH_TEXT" @onkeyup="@SearchKeydown" />
    </SearchInputControl>
    <SearchButtonControl>
        <button class="btn btn-outline-primary btn-rounded-end" type="button" @onclick="(() => this.OnSearch())">
            <span class="oi oi-magnifying-glass" />
        </button>
    </SearchButtonControl>
</DataGridControl>

<ModalControl TItem="AssemblyModel" SelectItem="this.SelectItem" SelectItemKeyProperty="@(nameof(this.SelectItem.ASSEMBLY_ID))">
    <Control>
        <EditForm class="container" Model="@this.SelectItem" OnValidSubmit="this.Save">
            <DataAnnotationsValidator />

            <FieldControl Label="Assembly ID" Value="this.SelectItem.ASSEMBLY_ID" CssClassDiv="pt-2 pb-1"></FieldControl>
            <FieldControl Label="Namespace">
                <Control>
                    <InputText id="namespace" class="form-control" placeholder="Namespace" @bind-Value="this.SelectItem.NAMESPACE" />
                    <ValidationMessage For="@(()=>this.SelectItem.NAMESPACE)" />
                </Control>
            </FieldControl>
            <FieldControl Label="DLL">
                <Control>
                    <InputFile id="dll" class="form-control" placeholder="Namespace" accept=".dll" OnChange="@this.InputFileChangeEventArgs" />
                </Control>
            </FieldControl>

            <div class="row">
                <FieldControl Label="FileDate" CssClassDiv="py-2 col-md-6" Value="@($"{this.SelectItem.FILE_DATE:yyyy-MM-dd HH:mm}")"></FieldControl>
                <FieldControl Label="Version" CssClassDiv="py-2 col-md-6" Value="this.SelectItem.VERSION"></FieldControl>
            </div>
            <div class="row">
                <FieldControl Label="Platform" CssClassDiv="py-2 col-md-6" Value="this.SelectItem.PLATFORM_DESC"></FieldControl>
                <FieldControl Label="Owner" CssClassDiv="py-2 col-md-6" Value="this.SelectItem.NICKNAME"></FieldControl>
            </div>

            <DataGridControl TItem="AttributeModel" @ref="this.DataGridControlAttribute" Columns="this.ColumnDefinitionsAttribute" DataItems="this.SelectItem.Attributes" PagingSize="5"
                             RowAdd="this.AddAttribute"
                             RowDelete="this.DeleteAttribute"
                             DataBsToggle=""
                             DataBsTarget="">
            </DataGridControl>

            <CommandControl TItem="AssemblyModel" SelectItem="this.SelectItem" SelectItemKeyProperty="@(nameof(this.SelectItem.ASSEMBLY_ID))" SaveIsSubmit="true" New="this.New" Copy="this.Copy" Delete="this.Delete" />
        </EditForm>
    </Control>
</ModalControl>